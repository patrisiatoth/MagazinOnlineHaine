<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagazinOnlineHaine.ProductPage"
             Title="Produse">

    <CollectionView x:Name="ProductsCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label Text="{Binding Name}" FontSize="Medium" />
                    <Label Text="{Binding Price, StringFormat='PreÈ›: {0:C}'}" FontSize="Small" />
                    <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="100" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>